<div class="container">
    <h1>EDIT YOUR PROFILE!</h1>
    <div class="row">
        <div class="col-sm-6 centered-form">
            <form action="/profile/<%= user._id %>/edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Username</label>
                    <input type="text" id="name" name="name" value="<%= user.username %>">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" value="<%= user.email %>">
                </div>
                <section>
                    <img src="../<%=user.imgURL%>" alt="photo goes here">
                    <h2>Change photo</h2>
                    <label for="imgURL">Profile Pic</label>
                    <input type="file" name="image">
                </section>
                <button type="submit">Save</button>
            </form>
            <a href="/profile">Back</a>
        </div>
    </div>
</div>
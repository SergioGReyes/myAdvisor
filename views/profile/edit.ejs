<div class="container">
    <div class="row"></div>
    <div class="row">
        <div class="col s1"></div>
        <div class="col s2">
            <a class="btn waves-effect waves-light" href="/profile">Back
                <i class="material-icons left">keyboard_backspace</i>
            </a>
        </div>
        <div class="col s5">
            <div class="titulo">EDIT YOUR PROFILE</div>
        </div>
        <div class="col s4"></div>
    </div>
    <form action="/profile/<%= user._id %>/edit" method="post" enctype="multipart/form-data">
        <div class="col s3" style="width:50%; margin:0 auto">
            <div class="form-group">
                <label for="name">Username</label>
                <input type="text" id="name" name="name" value="<%= user.username %>">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" value="<%= user.email %>">
            </div>
        </div>
        <div class="col s3" style="width:50%; margin:0 auto">
            <section>
                <img src="../<%=user.imgURL%>" alt="photo goes here">
                <br>
                <br>
                <label for="imgURL">Profile Picture</label>
                <br>
                <br>
                <input type="file" name="image">
                <hr>
            </section>
        </div>
        <div class="col s3" style="width:50%; margin:0 auto; margin-top: 20px; margin-bottom: 20px;">
                <button class="btn waves-effect waves-light" type="submit" href="/profile/<%= user._id %>/edit">Save
                    <i class="material-icons right">check</i>
                </button>
            </div>
        </div>
    </form>

</div>
</div>